{
  "name": "MultiSearch PWA",
  "short_name": "Search",
  "description": "A Progressive Web App for multi-search functionality",
  "start_url": "/search",   // Start the app from the /search page
  "display": "standalone",  // Ensures app behaves like a native app (without browser UI)
  "background_color": "#ffffff", // Background color for the splash screen
  "theme_color": "#000000", // Theme color for the app (used in the toolbar)
  "orientation": "portrait", // Lock the orientation to portrait (optional)
  "icons": [
    {
      "src": "/icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "scope": "/search",  // Limit the PWA's scope to the /search page
  "prefer_related_applications": false // This indicates that your app isn't trying to redirect users to native apps
}
